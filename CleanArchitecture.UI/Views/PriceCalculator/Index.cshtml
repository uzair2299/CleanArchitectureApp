                                <option value="" class="text-center">Select Manufacturer</option>
                            </select>
                        </div>
                        <div class="col-lg-4">
                            <label class="form-control-label" for="SelectedManufacturer"><span class="text-danger">*</span> Auto Model:</label>
                            @*@Html.DropDownListFor(x => Model.SelectedManufacturer,Model.AutoManufacturerLookup, htmlAttributes: new { @class = "form-control" })*@
                            <select asp-for="SelectedAutoModel" class="form-control kt-select2 disabled" name="SelectedModel" id="SelectedAutoModel" style="width:100%" disabled>
                                <option value="">Select Model</option>
                            </select>
                        </div>
                        <div class="col-lg-4">
                            <label class="form-control-label" for="SelectedManufacturer"><span class="text-danger">*</span> Auto Version:</label>
                            @*@Html.DropDownListFor(x => Model.SelectedManufacturer,Model.AutoManufacturerLookup, htmlAttributes: new { @class = "form-control" })*@
