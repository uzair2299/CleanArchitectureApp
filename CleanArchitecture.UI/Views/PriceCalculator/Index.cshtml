@model CleanArchitecture.Core.ViewModels.PriceCalculatorViewModel
@{

    ViewData["Title"] = "Price Calculator";
}
<script src="~/js/PriceCalculator.js"></script>
<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">

    <!-- begin:: Content Head -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-container  kt-container--fluid ">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">Price Calculator</h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            </div>
        </div>
    </div>

    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head--lg" style="background-color: #f9f9fc;">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="fa fa-calculator"></i>
                    </span>
                    <h3 class="kt-portlet__head-title">
                        Price Calculator
                    </h3>
                </div>
            </div>
            <div class="kt-portlet__body">
                <form class="kt-form kt-form--fit kt-margin-b-20 kt-separator--danger" id="PriceCalculator">
                    <div class="form-group row">
                        <div class="col-lg-4">
                            <label class="form-control-label" for="SelectedManufacturer"><span class="text-danger">*</span> Auto Manufactuer:</label>
                            <select asp-for="SelectedAutoManufacturer" asp-items="Model.AutoManufacturerLookup" class="form-control kt-select2 ErrorRemove" name="SelectedManufacturer" id="SelectedAutoManufacturer" style="width:100%">
                                <option value="" class="text-center">Select Manufacturer</option>
                            </select>
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-lg-4">
                            <label class="form-control-label" for="SelectedManufacturer"><span class="text-danger">*</span> Auto Model:</label>
                            <select asp-for="SelectedAutoModel" class="form-control kt-select2 ErrorRemove disabled" name="SelectedModel" id="SelectedAutoModel" style="width:100%" disabled>
                                <option value="">Select Model</option>
                            </select>
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-lg-4">
                            <label class="form-control-label" for="SelectedManufacturer"><span class="text-danger">*</span> Auto Version:</label>
                            <select asp-for="SelectedAutoVersion" class="form-control kt-select2  ErrorRemove disabled" name="SelectedVersion" id="SelectedAutoVersion" style="width:100%" disabled>
                                <option value="">Select Version</option>
                            </select>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-4">
                            <label class="form-control-label" for="SelectedManufacturer"><span class="text-danger">*</span>Province:</label>
                            <select asp-for="SelectedProvince" asp-items="Model.AutoProvinceLookup" class="form-control kt-select2 ErrorRemove" name="SelectedProvince" id="SelectedProvince" style="width:100%">
                                <option value="" class="text-center">Select Province</option>
                            </select>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <button type="button" class="btn btn-dark btn-brand--icon btn-sm" id="kt_search" onclick="PriceCalculator.CalculatePrice(event);">
                                <span>
                                    <i class="la la-calculator"></i>
                                    <span>Calculate</span>
                                </span>
                            </button>
                            &nbsp;&nbsp;
                            <button class="btn btn-secondary btn-secondary--icon btn-sm" type="button" onclick="PriceCalculator.Reset()">
                                <span>
                                    <i class="la la-close"></i>
                                    <span>Reset</span>
                                </span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

