@model CleanArchitecture.Core.ViewModels.AutoManufacturerViewModel
<div class="modal fade" id="_AutoManufacturerPanel" tabindex="-1" role="dialog" aria-labelledby="AutoManufacturerPanel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Vehicle Manufacturer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--label-right" id="VehicleManufacturer" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="kt-portlet__body">
                        <div class="kt-section">
                            <div class="kt-section__content">
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                        <label class="form-control-label" for="AutoManufacturerName"><span class="text-danger">*</span> Manufacturer Name:</label>
                                        <input type="text" name="AutoManufacturerName" class="form-control" placeholder="" asp-for="AutoManufacturerName">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-12">
                                        <label class="col-form-label">Set Popular :</label>
                                        <div class="row">
                                            
                                                <div class="col-3">
                                                    <label class="kt-checkbox kt-checkbox--solid">
                                                        <input type="checkbox" asp-for="IsPopular"  checked="@Model.IsPopular"> Is Popular
                                                        <span></span>
                                                    </label>
                                                </div>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="kt-section__body">
                                            <div class="form-group row text-center">
                                                @*<label class="col-xl-3 col-lg-3 col-form-label">Avatar</label>*@
                                                <div class="col-lg-12">
                                                    <div class="kt-avatar kt-avatar--outline kt-avatar--circle" id="kt_apps_user_add_avatar">
                                                        @if (Model != null)
                                                        {
                                                            <div class="kt-avatar__holder imageHolder" style="background-image: url(@Url.Content("~/Images/"+Model.ImagePath))"></div>
                                                        }
                                                        else
                                                        {
                                                            <div class="kt-avatar__holder imageHolder" style="background-image: url(@Url.Content("~/Images/Avatar/car.png"))"></div>
                                                        }
                                                        <label class="kt-avatar__upload" data-toggle="kt-tooltip" title="" data-original-title="Upload Logo">
                                                            <i class="fa fa-pen"></i>
                                                            <input type="file" id="fileUpload" name="fileUpload" asp-for="ImagePath">
                                                        </label>
                                                        <div class="CustomDiv">
                                                        </div>
                                                        @*<span class="kt-avatar__cancel" data-toggle="kt-tooltip" title="" data-original-title="Cancel avatar">
                                    <i class="fa fa-times"></i>
                                </span>*@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                    <button type="submit" class="btn btn-dark btn-sm" onclick="autoManufacturer.validdateAutoManufacturer(event)" id="btnAutoManufacturer">
                        <i class="fa fa-plus"></i>
                        Add New
                    </button>
                </div>
                <input type="hidden" asp-for="Id">
                <input type="hidden" asp-for="ImagePath">
            </form>
        </div>
    </div>
</div>
