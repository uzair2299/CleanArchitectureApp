@model CleanArchitecture.Core.ViewModels.AutoManufacturerViewModel
<div class="modal fade" id="_AutoManufacturerPanel" tabindex="-1" role="dialog" aria-labelledby="AutoManufacturerPanel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AutoManufacturerPanel">Vehicle Manufacturer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--label-right" id="VehicleManufacturer" novalidate="novalidate">
                <div class="modal-body">
                    <div class="kt-portlet__body">
                        <div class="kt-section">
                            <div class="kt-section__content">
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                        <label class="form-control-label" for="AutoManufacturerName">* Manufacturer Name:</label>
                                        <input type="text" name="AutoManufacturerName" class="form-control" placeholder="" value="" asp-for="AutoManufacturerName">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                    <button type="button" class="btn btn-dark btn-sm" onclick="autoManufacturer.validdateAutoManufacturer()" id="btnVehicleManufacturer">
                        <i class="fa fa-plus"></i>
                        Add New
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

