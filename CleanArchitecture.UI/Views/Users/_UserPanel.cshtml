@model CleanArchitecture.Core.ViewModels.UserViewModel
<div class="modal fade" id="_UserPanel" tabindex="-1" role="dialog" aria-labelledby="UserPanel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--label-right" id="User">
                <div class="modal-body">
                    <div class="kt-portlet__body">
                        <div class="kt-section">
                            <div class="kt-section__content">
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                        <label class="form-control-label" for="UserName"><span class="text-danger">*</span> Name:</label>
                                        <input type="text" asp-for="UserName" name="UserName" class="form-control" placeholder="">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-12">
                                        <label class="col-form-label">Assign Role :</label>
                                        <div class="row">
                                            @foreach (var item in Model.RolesLookup)
                                            {
                                                <div class="col-4">
                                                    <label class="kt-checkbox kt-checkbox--solid">
                                                        <input type="checkbox" value="@item.Value" checked="@item.Selected"> @item.Text
                                                        <span></span>
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                    <button type="submit" class="btn btn-dark btn-sm" onclick="User.validdateUser(event)" id="btnUser">
                        <i class="fa fa-plus"></i>
                        Add New
                    </button>
                </div>
                <input type="hidden" >
            </form>
        </div>
    </div>
</div>